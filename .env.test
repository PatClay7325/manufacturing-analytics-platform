# Test Environment Configuration
NODE_ENV=test
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/manufacturing_test?schema=public"
DIRECT_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/manufacturing_test?schema=public"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Authentication (minimum 32 chars for salts/secrets)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=test-nextauth-secret-minimum-32-characters
AUTH_TOKEN_SALT=test-auth-token-salt-minimum-32-characters

# External Services
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b
OLLAMA_API_URL=http://localhost:11434

# Required API Keys
OPENAI_API_KEY=test-api-key

# Redis
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Agent System
CRON_SCHEDULE=0 2 * * *
MEMORY_RETENTION_DAYS=30

# Monitoring
ENABLE_TRACING=false
ENABLE_METRICS=false

# Test Settings
LOG_LEVEL=error