  timestamp         DateTime @default(now())
  
  // Machine and Process Information
  machineName       String?  // MachineName from dataset
  processName       String?  // ProcessName from dataset
  
  // Core Production Metrics
  totalPartsProduced Int?    // TotalPartsProduced (dataset field)
  totalParts        Int?     // Legacy field (keep for backward compatibility)
  goodParts         Int?     // GoodParts
  rejectParts       Int?     // RejectParts (dataset field)
  rejectedParts     Int?     // Legacy field (keep for backward compatibility)
  reworkParts       Int?     // Parts requiring rework
  plannedProduction Int?     // Target production for period
  
  // Time Measurements (minutes)
  plannedProductionTime Float? // PlannedProductionTime
  downtimeMinutes   Float?   // DowntimeMinutes
  downtimeTimestamp DateTime? // DowntimeTimestamp
  downtimeCategory  String?  // DowntimeCategory
  downtimeReason    String?  // DowntimeReason
  changeoverTimeMinutes Float? // ChangeoverTimeMinutes
  cycleTimeSeconds  Float?   // CycleTimeSeconds
  
  // Core OEE Components (ISO 22400 compliant)
  availability      Float?   // Availability
  performance       Float?   // Performance  
  quality           Float?   // Quality
  oeeScore          Float?   // OEE (Overall Equipment Effectiveness)
  normalizedOEE     Float?   // NormalizedOEE
  simulatedOEE      Float?   // SimulatedOEE
  previousMonthOEE  Float?   // PreviousMonthOEE
  rolling7DayOEE    Float?   // Rolling7DayOEE
  
