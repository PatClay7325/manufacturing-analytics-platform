// Custom Log Aggregation (Loki replacement)
model SystemLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  level     String   // 'debug', 'info', 'warn', 'error', 'fatal'
  service   String
  message   String
  metadata  Json?
  traceId   String?
  spanId    String?
  userId    String?
  tenantId  String?
  
  @@index([timestamp])
  @@index([service])
  @@index([level])
  @@index([traceId])
  @@map("system_logs")
}

// Custom Distributed Tracing (Jaeger replacement)
model Trace {
  id            String    @id @default(cuid())
  traceId       String
  spanId        String    @unique
  parentSpanId  String?
  operationName String
  serviceName   String
  startTime     DateTime
  endTime       DateTime?
  duration      Int?      // in milliseconds
  tags          Json
  logs          Json      // Array of log entries
  status        String    // 'in_progress', 'completed', 'error'
  errorMessage  String?
  
  parent        Trace?    @relation("SpanHierarchy", fields: [parentSpanId], references: [spanId])
  children      Trace[]   @relation("SpanHierarchy")
  
  @@index([traceId])
  @@index([serviceName])
  @@index([operationName])
  @@index([startTime])
  @@index([status])
  @@map("traces")
}
