  mtbf              Float?   // MTBF (Mean Time Between Failures)
  mttr              Float?   // MTTR (Mean Time To Repair)
  failureRate       Float?   // FailureRate
  remainingUsefulLife Float? // RemainingUsefulLife
  confidenceInterval Float?  // ConfidenceInterval
  predictedFailureScore Float? // PredictedFailureScore
  
  // Utilization Metrics
  machineUtilizationPercentage Float? // MachineUtilizationPercentage
  operatorUtilizationPercentage Float? // OperatorUtilizationPercentage
  efficiencyLossPercentage Float? // EfficiencyLossPercentage
  downtimePercentage Float?  // DowntimePercentage
  
  // Error and Event Tracking
  errorCode         String?  // ErrorCode
  errorDescription  String?  // ErrorDescription
  eventTrigger      String?  // EventTrigger
  eventResolutionTime Float? // EventResolutionTime
  
  // Business and Customer Metrics
  simulatedRevenueGrowth Float? // SimulatedRevenueGrowth
  customerSatisfactionScore Float? // CustomerSatisfactionScore
  onTimeDeliveryPercentage Float? // OnTimeDeliveryPercentage
  revenueGenerated  Float?   // RevenueGenerated
  simulatedDowntimeReduction Float? // SimulatedDowntimeReduction
  
  // Environmental and Sustainability Metrics
  energyConsumed_kWh Float?  // EnergyConsumed_kWh
  energyCost_USD    Float?   // EnergyCost_USD
  emissions_kg      Float?   // Emissions_kg
  waterUsage_liters Float?   // WaterUsage_liters
  wasteGenerated_kg Float?   // WasteGenerated_kg
  recycledMaterial_kg Float? // RecycledMaterial_kg
  
  // Quality and Delivery Metrics
  onTimeDelivery    Boolean? // OnTimeDelivery
  defectiveItems    Int?     // DefectiveItems
  yieldPercentage   Float?   // YieldPercentage
  firstPassYield    Float?   // Percentage of parts right first time
  scrapRate         Float?   // Percentage of parts scrapped
  reworkRate        Float?   // Percentage of parts requiring rework
  
  // Incident Management
  incidentType      String?  // IncidentType
  incidentSeverity  String?  // IncidentSeverity
  incidentTimestamp DateTime? // IncidentTimestamp
  incidentCategory  String?  // IncidentCategory
  resolutionTimeMinutes Float? // ResolutionTimeMinutes
  
  // Operational Context
  operatorName      String?  // OperatorName
  shift             String?  // Shift
  batchNumber       String?  // BatchNumber
  productType       String?  // ProductType
  shiftOverlap      Boolean? // ShiftOverlap
  siteName          String?  // SiteName
  region            String?  // Region
  
  // Product Specifications
  productDimensions String?  // ProductDimensions
  productWeight     Float?   // ProductWeight
  costPerUnitProduced Float? // CostPerUnitProduced
  
  // Supply Chain
  supplierName      String?  // SupplierName
  deliveryLeadTime  Float?   // DeliveryLeadTime
  supplierRating    Float?   // SupplierRating
  
  // Data Quality and Validation
  dataValidationStatus String? // DataValidationStatus
  anomalyDetected   Boolean? // AnomalyDetected
  anomalyScore      Float?   // AnomalyScore
  anomalyReason     String?  // AnomalyReason
  deviationFromNormal Float? // DeviationFromNormal
  realTimeDataFlag  Boolean? // RealTimeDataFlag
  lastUpdatedTimestamp DateTime? // LastUpdatedTimestamp
  datasetVersion    String?  // DatasetVersion
  
  // Time Dimensions
  weekNumber        Int?     // WeekNumber
  month             Int?     // Month
  quarter           Int?     // Quarter
  year              Int?     // Year
  
  // User-Defined Thresholds
  userDefinedOEEThreshold Float? // UserDefinedOEEThreshold
  userDefinedDowntimeThreshold Float? // UserDefinedDowntimeThreshold
  
  // System Flags
  visualizationFlag Boolean? // VisualizationFlag
  stakeholderFeedbackRequired Boolean? // StakeholderFeedbackRequired
  
  // Existing Legacy Fields (maintaining backward compatibility)
  operatingTime     Float?   // Time equipment was actually running
  runTime           Float?   // Actual production runtime
  plannedDowntime   Float?   // Scheduled maintenance/breaks
  unplannedDowntime Float?   // Breakdowns, changeovers, minor stops
  idealCycleTime    Float?   // Theoretical fastest cycle time
  actualCycleTime   Float?   // Real average cycle time
  standardCycleTime Float?   // Engineering standard cycle time
  lotNumber         String?  // Production lot/batch identifier (legacy)
  notes             String?  // Additional context or issues
  throughputRate    Float?   // Parts per hour actual
  targetThroughput  Float?   // Parts per hour target
  speedLoss         Float?   // Performance loss percentage
  
  createdAt         DateTime @default(now())
  
  // ISO-compliant equipment identification
  equipmentId       String?  // ISO 14224 equipment identifier
  plantCode         String?  // Plant/facility code  
  assetTag          String?  // Asset management tag
  workCenterId      String?  // Work center identification

  @@index([timestamp])
  @@index([equipmentId, timestamp])
  @@index([shift, timestamp])
  @@index([productType, timestamp])
  @@index([machineName, timestamp])
  @@index([processName, timestamp])
  @@index([batchNumber])
  @@index([siteName, timestamp])
  @@index([region, timestamp])
  @@index([anomalyDetected, timestamp])
  @@index([dataValidationStatus])
  @@index([year, month, weekNumber])
  @@index([plantCode, equipmentId])
  @@index([workCenterId, timestamp])
}

// Enhanced Quality Metrics for Statistical Process Control (SPC)
model QualityMetric {
  id           String   @id @default(cuid())
  timestamp    DateTime @default(now())
  
  // Measurement Details
  parameter    String   // Quality characteristic being measured
  value        Float    // Measured value
  uom          String   // Unit of measurement
  
  // Control Limits (Statistical Process Control)
  lowerLimit   Float?   // Lower specification limit (LSL)
  upperLimit   Float?   // Upper specification limit (USL)
  nominal      Float?   // Target/nominal value
  lowerControlLimit Float? // Lower control limit (LCL)
  upperControlLimit Float? // Upper control limit (UCL)
  
  // Statistical Analysis
  isWithinSpec Boolean  // Within specification limits
  isInControl  Boolean  @default(true) // Within control limits
  deviation    Float?   // Deviation from nominal
  zScore       Float?   // Statistical Z-score
  cpk          Float?   // Process capability index
  ppk          Float?   // Process performance index
  
  // Quality Classification
  qualityGrade String?  // A, B, C grade or pass/fail
  defectType   String?  // Type of defect if any
  defectSeverity String? // critical, major, minor
  inspectionType String? // incoming, in-process, final, audit
  
  // Contextual Information
  batchNumber  String?  // Production batch/lot
  serialNumber String?  // Part serial number
  inspector    String?  // Person who performed inspection
  shift        String?  // Production shift
  operator     String?  // Production operator
  
  // Measurement Equipment
  measurementDevice String? // Gauge/instrument used
  calibrationDate DateTime? // Last calibration date
  measurementAccuracy Float? // Instrument accuracy
  
  // Statistical Process Control Alerts
  spcViolation String?  // Type of SPC rule violation
  controlChartType String? // X-bar, R, I-MR, p, np, c, u
  
  // Rework and Disposition
  disposition  String?  // accept, reject, rework, use-as-is
  reworkReason String?  // Reason for rework if applicable
  reworkCost   Float?   // Cost of rework
  
  notes        String?  // Additional observations
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // ISO-compliant equipment identification
  equipmentId  String?  // ISO 14224 equipment identifier
  plantCode    String?  // Plant/facility code
  assetTag     String?  // Asset management tag
  workCenterId String?  // Work center identification

  @@index([parameter])
  @@index([isWithinSpec])
  @@index([isInControl])
  @@index([equipmentId, timestamp])
  @@index([batchNumber])
  @@index([defectType])
  @@index([inspectionType])
  @@index([timestamp])
  @@index([plantCode, equipmentId])
  @@index([workCenterId, timestamp])
}

model QualityCheck {
  id                String          @id @default(cuid())
  productionOrderId String
  checkType         String
  inspector         String
  timestamp         DateTime        @default(now())
  result            String
  notes             String?
  defectTypes       String[]
  defectCounts      Int[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  productionOrder   ProductionOrder @relation(fields: [productionOrderId], references: [id])

  @@index([productionOrderId])
  @@index([result])
  @@index([checkType])
}

// Enhanced Alert System for Real-time Manufacturing Monitoring
model Alert {
  id             String    @id @default(cuid())
  
  // Alert Classification
  alertType      String    // quality, equipment, production, safety, maintenance
  subType        String?   // specific alert subtype
  severity       String    // critical, high, medium, low, info
  priority       String    @default("medium") // urgent, high, medium, low
  
  // Alert Content
  title          String?   // Short alert title
  message        String    // Detailed alert message
  
  // Alert Context
  metricName     String?   // Name of metric that triggered alert
  currentValue   Float?    // Current value of the metric
  thresholdValue Float?    // Threshold that was exceeded
  unit           String?   // Unit of measurement
  
  // Status and Lifecycle
  status         String    @default("active") // active, acknowledged, resolved, dismissed
  timestamp      DateTime  @default(now())
  
  // Alert Handling
  acknowledgedBy String?
  acknowledgedAt DateTime?
  resolvedBy     String?
  resolvedAt     DateTime?
  dismissedBy    String?
  dismissedAt    DateTime?
  
  // Resolution Details
  resolutionTime Float?    // Time to resolve (minutes)
  rootCause      String?   // Identified root cause
  correctiveAction String? // Action taken to resolve
  
  // Escalation
  escalated      Boolean   @default(false)
  escalatedTo    String?   // Person/team escalated to
  escalatedAt    DateTime?
  
  // Notification Tracking
  notificationsSent String[] // List of notification methods used
  recipientsList String[]    // List of people notified
  
  notes          String?
  tags           String[]  // Categorization tags
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  // ISO-compliant equipment identification
  equipmentId    String?  // ISO 14224 equipment identifier
  plantCode      String?  // Plant/facility code
  assetTag       String?  // Asset management tag
  
  // Parent-child alert relationships
  parentAlertId  String?
  ParentAlert    Alert?    @relation("AlertHierarchy", fields: [parentAlertId], references: [id])
  ChildAlerts    Alert[]   @relation("AlertHierarchy")

  @@index([alertType])
  @@index([severity])
  @@index([status])
  @@index([timestamp])
  @@index([metricName])
  @@index([escalated])
}

