  downtimeTrend     String?  // DowntimeTrend
  previousWeekDowntime Float? // PreviousWeekDowntime
  rolling30DayDowntime Float? // Rolling30DayDowntime
  industryBenchmarkOEE Float? // IndustryBenchmarkOEE
  deviationFromBenchmark Float? // DeviationFromBenchmark
  benchmarkOEE      Float?   // BenchmarkOEE
  benchmarkDowntime Float?   // BenchmarkDowntime
  benchmarkEnergyConsumed Float? // BenchmarkEnergyConsumed_kWh
  
