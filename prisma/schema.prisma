// EMAIL NOTIFICATION SYSTEM
// Complete email service implementation with templates, queue, and tracking
// =============================================================================

// Email Templates - Reusable email templates
model EmailTemplate {
  id               String   @id @default(cuid())
  name             String
  subject          String
  html             String   @db.Text
  text             String?  @db.Text
  variables        String[] // Template variables (e.g., userName, alertTitle)
  category         String   // alert, welcome, password-reset, report, invitation, system, custom
  customizable     Boolean  @default(true) // Can be edited by users
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([category])
  @@map("email_templates")
}

// Email Queue - Queued emails for reliable delivery
model EmailQueue {
  id               String   @id @default(cuid())
  
  // Email Message
  message          Json     // Complete email message (to, cc, bcc, subject, etc.)
  status           String   @default("pending") // pending, processing, sent, failed
  attempts         Int      @default(0)
  maxAttempts      Int      @default(3)
  
  // Timestamps
  createdAt        DateTime @default(now())
  processedAt      DateTime?
  sentAt           DateTime?
  failedAt         DateTime?
  
  // Error Tracking
  error            String?
  messageId        String?  // Provider message ID
  
  // Metadata
  metadata         Json?    // Additional metadata
  
  @@index([status])
  @@index([createdAt])
  @@map("email_queue")
}

// Email History - Complete history of sent emails
model EmailHistory {
  id               String   @id @default(cuid())
  
  // Recipients
  to               String[]
  cc               String[]
  bcc              String[]
  from             String
  
  // Content
  subject          String
  templateId       String?
  templateData     Json?
  
  // Status
  status           String   // sent, failed, bounced, opened, clicked, unsubscribed
  sentAt           DateTime
  openedAt         DateTime?
  clickedAt        DateTime?
  bouncedAt        DateTime?
  unsubscribedAt   DateTime?
  
  // Tracking
  messageId        String?  // Provider message ID
  error            String?
  events           Json     @default("[]") // Array of email events
  
  // Metadata
  metadata         Json?
  
  createdAt        DateTime @default(now())
  
  @@index([sentAt])
  @@index([status])
  @@index([to])
  @@map("email_history")
}

// Email Preferences - User notification preferences
model EmailPreferences {
  id               String   @id @default(cuid())
  userId           String   @unique
  email            String
  
  // Global Settings
  enabled          Boolean  @default(true)
  
  // Category Preferences
  categories       Json     @default("{\"alerts\": true, \"reports\": true, \"system\": true, \"marketing\": false}")
  
  // Frequency Settings
  frequency        Json?    // immediate, daily, weekly settings
  
  // Unsubscribe
  unsubscribeToken String?  @unique
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([email])
  @@index([unsubscribeToken])
  @@map("email_preferences")
}

