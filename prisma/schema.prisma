// =============================================================================

// User Preferences - Individual user settings and customization
model UserPreferences {
  id               String   @id @default(cuid())
  userId           String   @unique
  
  // UI Preferences
  theme            String   @default("system") // light, dark, system
  language         String   @default("en") // ISO 639-1 language code
  timezone         String   @default("browser") // Timezone identifier or "browser"
  weekStart        String   @default("sunday") // sunday, monday
  dateFormat       String   @default("MM/DD/YYYY") // Date format string
  timeFormat       String   @default("12h") // 12h, 24h
  
  // Dashboard Preferences
  homeDashboardId  String?  // Default dashboard UID
  defaultTimeRange String   @default("Last 6 hours") // Default time range
  autoRefresh      String?  // Auto-refresh interval (e.g., "5s", "1m", "5m")
  queryHistory     Int      @default(50) // Number of queries to store in history
  
  // Editor Preferences
  defaultDatasourceId String? // Default datasource UID
  graphTooltipMode String   @default("single") // single, multi, none
  exploreMode      String   @default("metrics") // metrics, logs, traces
  queryTimeout     Int      @default(300) // Query timeout in seconds
  liveNow          Boolean  @default(true) // Enable live now feature
  
  // Notification Preferences
  emailNotifications Boolean @default(true)
  browserNotifications Boolean @default(true)
  alertNotifications Boolean @default(true)
  alertSeverityFilter String[] @default(["critical", "high"]) // Alert severities to notify
  notificationSound Boolean @default(true)
  desktopNotifications Boolean @default(false)
  
  // Accessibility Preferences
  reduceMotion     Boolean  @default(false) // Reduce animations
  highContrast     Boolean  @default(false) // High contrast mode
  fontSize         String   @default("medium") // small, medium, large
  keyboardShortcuts Boolean @default(true) // Enable keyboard shortcuts
  screenReaderMode Boolean  @default(false) // Optimize for screen readers
  focusIndicators  Boolean  @default(true) // Show focus indicators
  
  // Feature Preferences
  featureAnnouncementsEnabled Boolean @default(true) // Show feature announcements
  experimentalFeaturesEnabled Boolean @default(false) // Enable experimental features
  developerMode    Boolean  @default(false) // Enable developer features
  
  // Navigation Preferences
  sidebarCollapsed Boolean  @default(false) // Sidebar collapsed by default
  sidebarWidth     Int      @default(240) // Sidebar width in pixels
  navbarFixed      Boolean  @default(true) // Fixed navigation bar
  
  // Data Display Preferences
  nullValueDisplay String   @default("null") // How to display null values
  unitSystem       String   @default("metric") // metric, imperial
  decimalPlaces    Int      @default(2) // Default decimal places
  thousandsSeparator String @default(",") // Thousands separator
  
  // Privacy Preferences
  shareAnalytics   Boolean  @default(true) // Share usage analytics
  saveDashboardQueries Boolean @default(true) // Save dashboard queries
  
  // Custom Settings
  customSettings   Json?    // Additional custom settings
  
  // Versioning
  version          Int      @default(1) // Preferences schema version
  migratedAt       DateTime? // Last migration timestamp
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relationships
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("user_preferences")
}

// Organization Defaults - Default preferences for organization
model OrganizationDefaults {
  id               String   @id @default(cuid())
  organizationId   String   @unique
  
  // Default UI Settings
  defaultTheme     String   @default("light") // Default theme for new users
  defaultLanguage  String   @default("en") // Default language
  defaultTimezone  String   @default("UTC") // Default timezone
  weekStart        String   @default("monday") // Default week start
  dateFormat       String   @default("YYYY-MM-DD") // Default date format
  timeFormat       String   @default("24h") // Default time format
  
  // Default Dashboard Settings
  defaultHomeDashboardId String? // Organization default dashboard
  defaultTimeRange String   @default("Last 24 hours") // Default time range
  defaultRefreshInterval String? // Default refresh interval
  
  // Default Editor Settings
  defaultDatasourceId String? // Organization default datasource
  queryTimeout     Int      @default(300) // Default query timeout
  maxDataPoints    Int      @default(1000) // Max data points per query
  
  // Default Notification Settings
  emailNotificationsEnabled Boolean @default(true)
  browserNotificationsEnabled Boolean @default(true)
  
  // Feature Flags
  publicDashboardsEnabled Boolean @default(false)
  snapshotsEnabled Boolean @default(true)
  annotationsEnabled Boolean @default(true)
  alertingEnabled  Boolean  @default(true)
  exploreEnabled   Boolean  @default(true)
  
  // Security Settings
  enforcePasswordPolicy Boolean @default(true)
  passwordMinLength Int      @default(8)
  requirePasswordChange Boolean @default(false)
  sessionTimeout   Int      @default(86400) // Session timeout in seconds (24h)
  
  // Data Retention
  dashboardVersionRetention Int @default(20) // Number of dashboard versions to keep
  queryHistoryRetention Int @default(30) // Days to keep query history
  
  // Resource Limits
  maxDashboardsPerUser Int?   // Max dashboards per user
  maxQueriesPerMinute Int?    // Rate limit for queries
  maxAlertsPerUser Int?       // Max alerts per user
  
  // Branding
  loginMessage     String?  // Custom login message
  footerMessage    String?  // Custom footer message
  customLogoUrl    String?  // Custom logo URL
  
  // Custom Defaults
  customDefaults   Json?    // Additional custom defaults
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([organizationId])
  @@map("organization_defaults")
}

// Preference Change History - Track preference changes for audit
model PreferenceChangeHistory {
  id               String   @id @default(cuid())
  userId           String
  preferenceType   String   // user, organization
  preferenceId     String   // ID of the preference record
  
  // Change Details
  fieldChanged     String   // Field that was changed
  oldValue         String?  // Previous value (as JSON string)
  newValue         String?  // New value (as JSON string)
  
  // Change Context
  changeReason     String?  // Reason for change
  changedBy        String   // User who made the change
  changeSource     String   @default("web") // web, api, admin, system
  
  // Metadata
  ipAddress        String?  // IP address of change
  userAgent        String?  // User agent of change
  
  timestamp        DateTime @default(now())
  
  @@index([userId, timestamp])
  @@index([preferenceId, timestamp])
  @@index([fieldChanged])
  @@map("preference_change_history")
}

// Dashboard Template System - Comprehensive template management for Grafana-like functionality
model DashboardTemplate {
  id               String   @id @default(cuid())
  uid              String   @unique @default(cuid())
  
  // Basic Template Information
  name             String   // Template display name
  title            String   // Dashboard title when instantiated
  description      String?  // Template description
  summary          String?  // Short summary for cards
  
  // Template Configuration
  config           Json     // Complete dashboard JSON configuration
  variables        Json?    // Template variables configuration
  panels           Json?    // Panels configuration with placeholders
  
  // Categorization and Discovery
  categoryId       String?
  category         TemplateCategory? @relation(fields: [categoryId], references: [id])
  tags             String[] // Template tags for searching
  industry         String[] // Manufacturing industries (automotive, aerospace, etc.)
  
  // Template Metadata
  version          String   @default("1.0.0")
  schemaVersion    Int      @default(1)
  compatibleWith   String[] // Compatible Grafana/platform versions
  dependencies     String[] // Required plugins or data sources
  
  // Visual and Preview
  thumbnail        String?  // Thumbnail URL or base64
  screenshots      String[] // Screenshot URLs for preview
  previewConfig    Json?    // Sample data configuration for preview
  
  // Template Properties
  isPublic         Boolean  @default(false) // Public or private template
  isFeatured       Boolean  @default(false) // Featured in template gallery
  isOfficial       Boolean  @default(false) // Official platform template
  isDeprecated     Boolean  @default(false) // Template is deprecated
  
  // Usage and Analytics
  downloadCount    Int      @default(0)     // Number of times downloaded/used
  rating           Float?                   // Average user rating
  ratingCount      Int      @default(0)     // Number of ratings
  
  // Manufacturing-Specific Fields
  manufacturingType String? // OEE, Quality, Maintenance, Energy, etc.
  equipmentTypes   String[] // Compatible equipment types
  isoStandards     String[] // Related ISO standards (22400, 9001, 50001, etc.)
  kpiTypes         String[] // KPI types covered (availability, performance, quality)
  
  // Authoring Information
  authorId         String
  author           User     @relation(fields: [authorId], references: [id])
  authorName       String   // Author display name
  authorEmail      String?  // Author contact email
  organization     String?  // Author organization
  
  // Template Source and Updates
  sourceUrl        String?  // Original template source URL
  documentationUrl String?  // Documentation URL
  supportUrl       String?  // Support/help URL
  updateChannel    String?  // Update notification channel
  
  // Publishing and Lifecycle
  publishedAt      DateTime?
  lastUpdatedAt    DateTime @updatedAt
  createdAt        DateTime @default(now())
  
  // Relations
  usageHistory     TemplateUsage[]
  reviews          TemplateReview[]
  versions         TemplateVersion[]
  collectionItems  TemplateCollectionItem[]
  
  @@index([categoryId])
  @@index([authorId])
  @@index([isPublic])
  @@index([isFeatured])
  @@index([isOfficial])
  @@index([manufacturingType])
  @@index([publishedAt])
  @@index([downloadCount])
  @@index([rating])
  // @@fulltext([name, description, summary]) // Fulltext not supported with current connector
  @@map("dashboard_templates")
}

// Template Categories for Organization
model TemplateCategory {
  id               String   @id @default(cuid())
  
  // Category Information
  name             String   @unique
  displayName      String   // Localized display name
  description      String?
  slug             String   @unique
  
  // Category Hierarchy
  parentId         String?
  parent           TemplateCategory? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children         TemplateCategory[] @relation("CategoryHierarchy")
  
  // Category Properties
  icon             String?  // Icon name or URL
  color            String?  // Category color for UI
  sortOrder        Int      @default(0)
  isActive         Boolean  @default(true)
  
  // Manufacturing-Specific
  industryFocus    String[] // Target industries
  complexityLevel  String?  // beginner, intermediate, advanced
  
  // Analytics
  templateCount    Int      @default(0)
  popularityScore  Float    @default(0)
  
  // Metadata
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relations
  templates        DashboardTemplate[]
  
  @@index([parentId])
  @@index([isActive])
  @@index([sortOrder])
  // @@fulltext([name, displayName, description]) // Fulltext not supported with current connector
  @@map("template_categories")
}

// Template Usage Tracking and Analytics
model TemplateUsage {
  id               String   @id @default(cuid())
  
  // Usage Information
  templateId       String
  template         DashboardTemplate @relation(fields: [templateId], references: [id])
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  
  // Usage Context
  usageType        String   // create_dashboard, preview, download, clone
  dashboardId      String?  // Created dashboard ID if applicable
  dashboardUid     String?  // Created dashboard UID
  
  // Usage Details
  variables        Json?    // Variables used when instantiating
  customizations   Json?    // Customizations made during usage
  
  // Environment and Source
  userAgent        String?
  ipAddress        String?
  referrer         String?
  
  // Session Information
  sessionId        String?
  usageDuration    Int?     // Time spent (seconds)
  
  // Metadata
  timestamp        DateTime @default(now())
  
  @@index([templateId])
  @@index([userId])
  @@index([usageType])
  @@index([timestamp])
  @@map("template_usage")
}

// Template Reviews and Ratings
model TemplateReview {
  id               String   @id @default(cuid())
  
  // Review Information
  templateId       String
  template         DashboardTemplate @relation(fields: [templateId], references: [id])
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  
  // Review Content
  rating           Int      // 1-5 stars
  title            String?
  comment          String?
  
  // Review Categories
  easeOfUse        Int?     // 1-5 rating
  documentation    Int?     // 1-5 rating
  applicability    Int?     // 1-5 rating
  
  // Review Status
  isApproved       Boolean  @default(false)
  isHelpful        Boolean  @default(false)
  helpfulCount     Int      @default(0)
  
  // Manufacturing Context
  industryContext  String?  // Industry where used
  equipmentContext String?  // Equipment type used with
  
  // Metadata
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@unique([templateId, userId]) // One review per user per template
  @@index([templateId])
  @@index([userId])
  @@index([rating])
  @@index([isApproved])
  @@map("template_reviews")
}

// Template Version History
model TemplateVersion {
  id               String   @id @default(cuid())
  
  // Version Information
  templateId       String
  template         DashboardTemplate @relation(fields: [templateId], references: [id])
  version          String   // Semantic version (1.0.0, 1.1.0, etc.)
  versionNumber    Int      // Incremental version number
  
  // Version Content
  config           Json     // Dashboard configuration for this version
  variables        Json?    // Variables configuration
  
  // Change Information
  changeType       String   // major, minor, patch, hotfix
  changeLog        String?  // What changed in this version
  migrationNotes   String?  // Notes for migrating from previous versions
  
  // Compatibility
  compatibleWith   String[] // Compatible platform versions
  deprecatedFeatures String[] // Features deprecated in this version
  breakingChanges  String[] // Breaking changes from previous version
  
  // Publishing
  isStable         Boolean  @default(true)
  isBeta           Boolean  @default(false)
  isAlpha          Boolean  @default(false)
  
  // Metadata
  publishedAt      DateTime @default(now())
  publishedBy      String   // User ID who published this version
  
  @@index([templateId])
  @@index([version])
  @@index([versionNumber])
  @@index([publishedAt])
  @@map("template_versions")
}

// Template Collections for Grouping Related Templates
model TemplateCollection {
  id               String   @id @default(cuid())
  
  // Collection Information
  name             String
  description      String?
  slug             String   @unique
  
  // Collection Properties
  isPublic         Boolean  @default(false)
  isFeatured       Boolean  @default(false)
  isOfficial       Boolean  @default(false)
  
  // Collection Metadata
  thumbnail        String?
  tags             String[]
  
  // Manufacturing Focus
  industryFocus    String[] // Target industries
  useCaseType      String?  // complete_line, specific_equipment, etc.
  
  // Author Information
  authorId         String
  author           User     @relation(fields: [authorId], references: [id])
  
  // Analytics
  downloadCount    Int      @default(0)
  rating           Float?
  
  // Metadata
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relations
  items            TemplateCollectionItem[]
  
  @@index([authorId])
  @@index([isPublic])
  @@index([isFeatured])
  // @@fulltext([name, description]) // Fulltext not supported with current connector
  @@map("template_collections")
}

// Items within Template Collections
model TemplateCollectionItem {
  id               String   @id @default(cuid())
  
  // Collection Reference
  collectionId     String
  collection       TemplateCollection @relation(fields: [collectionId], references: [id])
  
  // Template Reference
  templateId       String
  template         DashboardTemplate @relation(fields: [templateId], references: [id])
  
  // Item Properties
  sortOrder        Int      @default(0)
  description      String?  // Custom description for this item in collection
  
  // Metadata
  addedAt          DateTime @default(now())
  addedBy          String   // User ID who added this item
  
  @@unique([collectionId, templateId])
  @@index([collectionId])
  @@index([templateId])
  @@index([sortOrder])
  @@map("template_collection_items")
}

