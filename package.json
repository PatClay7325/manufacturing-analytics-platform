{
  "name": "manufacturing-intelligence-platform",
  "version": "1.0.0",
  "description": "Manufacturing Intelligence Platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:unit": "vitest run",
    "test:integration": "vitest run --dir testing/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "typecheck": "tsc --noEmit",
    "msw:init": "msw init public --no-save"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
