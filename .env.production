# Production Environment Configuration
# IMPORTANT: Use environment variables from your hosting provider for sensitive values

# Database
# For production, use a connection pooler like pgBouncer or Prisma Accelerate
# Example with SSL: postgresql://user:pass@host:5432/db?sslmode=require&connection_limit=10
DATABASE_URL="postgresql://user:password@localhost:5432/manufacturing_prod"

# Direct database URL for migrations (bypasses connection pooler)
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/manufacturing_prod"

# API Configuration
NEXT_PUBLIC_API_URL=""
NEXT_PUBLIC_WS_URL=""

# Authentication
NEXTAUTH_URL=""
NEXTAUTH_SECRET=""

# External Services
OLLAMA_API_URL=""

# Application Settings
NODE_ENV=production
LOG_LEVEL=info

# Security
CORS_ALLOWED_ORIGINS=""
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool Settings
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
SENTRY_DSN=""

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true