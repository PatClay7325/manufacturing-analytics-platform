# Grafana Integration Configuration
# ⚠️  SECURITY WARNING: Replace all placeholder values with secure passwords
# ⚠️  DO NOT use default passwords in production

# Database
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/manufacturing
POSTGRES_USER=${POSTGRES_USER:-postgres}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-CHANGE_THIS_PASSWORD_IMMEDIATELY}

# Grafana Settings
GRAFANA_URL=http://localhost:3000
GRAFANA_EXTERNAL_URL=http://localhost:3000
NEXT_PUBLIC_GRAFANA_URL=http://localhost:3000/grafana
GRAFANA_API_KEY=${GRAFANA_API_KEY:-GENERATE_SECURE_API_KEY}
GRAFANA_ORG_ID=1
GRAFANA_ADMIN_USER=${GRAFANA_ADMIN_USER:-admin}
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD:-CHANGE_THIS_PASSWORD_IMMEDIATELY}
GRAFANA_SECRET_KEY=${GRAFANA_SECRET_KEY:-GENERATE_SECURE_SECRET_KEY}

# Next.js Application
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=${NEXTAUTH_SECRET:-GENERATE_SECURE_SECRET_KEY}
NODE_ENV=development
PORT=3001

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=${REDIS_PASSWORD:-CHANGE_THIS_PASSWORD_IMMEDIATELY}

# SMTP (Optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=admin@manufacturing.local

# MQTT (Optional)
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Domain Configuration
DOMAIN=localhost

# Monitoring
PROMETHEUS_URL=http://localhost:9090
LOKI_URL=http://localhost:3100