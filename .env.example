# Example Environment Configuration
# Copy this file to .env.local and update with your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/manufacturing?schema=public"

# For production with connection pooling
# DATABASE_URL="postgresql://username:password@host:5432/manufacturing?schema=public&connection_limit=10&pool_timeout=20"
# DIRECT_DATABASE_URL="postgresql://username:password@host:5432/manufacturing?schema=public"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-random-string-here

# External Services (Optional)
OLLAMA_API_URL=http://localhost:11434

# Mock Data Control
# Set to 'true' to disable all mock data and use only live database
NEXT_PUBLIC_DISABLE_MOCKS=false


# Production Settings (Optional)
# NODE_ENV=production
# LOG_LEVEL=info
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX_REQUESTS=100
# DATABASE_CONNECTION_LIMIT=10
# DATABASE_POOL_TIMEOUT=20
# ENABLE_CACHE=true
# CACHE_TTL=3600
# ENABLE_METRICS=true
# SENTRY_DSN=your-sentry-dsn