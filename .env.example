# Example Environment Configuration
# Copy this file to .env.local and update with your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/manufacturing?schema=public"

# For production with connection pooling
# DATABASE_URL="postgresql://username:password@host:5432/manufacturing?schema=public&connection_limit=10&pool_timeout=20"
# DIRECT_DATABASE_URL="postgresql://username:password@host:5432/manufacturing?schema=public"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-random-string-here

# External Services
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b

# Agent System Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
AUTH_TOKEN_SALT=generate-32-character-or-longer-secure-string
CRON_SCHEDULE="0 2 * * *"
MEMORY_RETENTION_DAYS=30

# OpenTelemetry (Optional)
OTEL_EXPORTER_ENDPOINT=https://otel-collector:4318/v1/traces
ENABLE_TRACING=false
ENABLE_METRICS=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Manufacturing Systems (Optional)
OPC_UA_SERVER_URL=opc.tcp://localhost:4840
MQTT_BROKER_URL=mqtt://localhost:1883
TIMESCALEDB_URL=postgresql://user:pass@localhost:5433/timescale

# Message Queue (Optional)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Engine Configuration
NEXT_PUBLIC_ANALYTICS_ENGINE_URL=http://localhost:3001

# Analytics Integration
NEXT_PUBLIC_ANALYTICS_URL=http://localhost:3003
ANALYTICS_API_KEY=your-analytics-api-key
ANALYTICS_ORG_ID=1

# Mock Data Control
# Set to 'true' to disable all mock data and use only live database
NEXT_PUBLIC_DISABLE_MOCKS=false


# Error Tracking & Monitoring
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Performance Monitoring
ENABLE_APM=true
APM_SERVICE_NAME=manufacturing-analytics
APM_ENVIRONMENT=development

# Monitoring Services
LOKI_URL=http://localhost:3100
JAEGER_URL=http://localhost:16686
PROMETHEUS_URL=http://localhost:9090
ALERTMANAGER_URL=http://localhost:9093
GRAFANA_URL=http://localhost:3003

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Enterprise Authentication
# LDAP Configuration
LDAP_SERVER=ldap://your-ldap-server.com
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=ldap-password
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com

# OAuth Configuration
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_MICROSOFT_CLIENT_ID=your-microsoft-client-id
OAUTH_MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# SAML Configuration
SAML_ENTRY_POINT=https://your-saml-provider.com/saml/sso
SAML_ISSUER=your-app-identifier
SAML_CERT=your-saml-certificate

# Role-Based Access Control
RBAC_ADMIN_ROLE=admin
RBAC_USER_ROLE=user
RBAC_OPERATOR_ROLE=operator
RBAC_ENGINEER_ROLE=engineer

# Email Configuration
# Provider: smtp, sendgrid, ses
EMAIL_PROVIDER=smtp

# From Address
EMAIL_FROM=noreply@yourcompany.com
EMAIL_FROM_NAME=Manufacturing Analytics Platform
EMAIL_REPLY_TO=support@yourcompany.com

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=alerts@yourcompany.com
SMTP_PASSWORD=your-smtp-password
SMTP_SECURE=true

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# AWS SES Configuration (if EMAIL_PROVIDER=ses)
# (Uses AWS credentials from AWS_* env vars above)

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#manufacturing-alerts

# SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Data Source Configurations
# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=manufacturing

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=manufacturing_user
MYSQL_PASSWORD=mysql-password
MYSQL_DATABASE=manufacturing

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elasticsearch-password

# Azure Monitor
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# AWS CloudWatch
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# AWS Disaster Recovery Configuration
AWS_SECONDARY_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012

# RDS Configuration
RDS_INSTANCE_IDENTIFIER=prod-manufacturing-db
RDS_CLUSTER_IDENTIFIER=prod-manufacturing-cluster
GLOBAL_CLUSTER_IDENTIFIER=manufacturing-global-cluster

# Disaster Recovery Configuration
DR_BACKUP_INTERVAL_HOURS=6
DR_TARGET_REGIONS=us-west-2,eu-west-1
DR_METADATA_BUCKET=manufacturing-dr-metadata
DR_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012

# S3 Replication
S3_REPLICATION_ROLE_ARN=arn:aws:iam::123456789012:role/s3-replication-role

# Chaos Engineering
CHAOS_EC2_IDS=i-0123456789abcdef0,i-0fedcba9876543210
CHAOS_ASG_NAMES=manufacturing-api-asg,manufacturing-worker-asg
CHAOS_APPROVAL_KEY=your-approval-key-for-critical-experiments

# Cloud Configuration
CLOUD_PROVIDER=aws
CLOUD_REGION=us-east-1
CLOUD_STORAGE_BUCKET=manufacturing-data

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Production Settings
NODE_ENV=development
LOG_LEVEL=debug
CORS_ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20
ENABLE_CACHE=true
CACHE_TTL=3600
ENABLE_METRICS=true

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_ALERTS=true
FEATURE_MOBILE_SUPPORT=true
FEATURE_ENTERPRISE_AUTH=true
FEATURE_AUDIT_LOGGING=true